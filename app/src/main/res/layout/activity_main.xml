<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="113dp"
            android:layout_height="100dp"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="127dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="504dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="149dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="149dp" android:textSize="30sp"/>
    <Button
            android:text="+1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginTop="114dp"
            app:layout_constraintTop_toBottomOf="@id/textView" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="342dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp" android:background="#47885e"/>
    <Button
            android:text="+10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginEnd="162dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="162dp"
            android:layout_marginTop="62dp" app:layout_constraintTop_toBottomOf="@+id/button"
            android:layout_marginBottom="232dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="#47885e"/>
    <Button
            android:text="-1"
            android:layout_width="102dp"
            android:layout_height="77dp"
            android:id="@+id/button3" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="341dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="313dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="43dp" app:layout_constraintEnd_toStartOf="@+id/button"
            android:layout_marginEnd="17dp"/>
    <Button
            android:text="-10"
            android:layout_width="100dp"
            android:layout_height="79dp"
            android:id="@+id/button4" android:layout_marginTop="61dp"
            app:layout_constraintTop_toBottomOf="@+id/button3" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="173dp" app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginEnd="10dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="52dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>